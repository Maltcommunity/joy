{
  "name": "@maltjoy/core",
  "version": "1.0.0-rc.0.1",
  "description": "Design system library by @malt",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "es2015": "dist/esm/index.js",
  "es2017": "dist/esm/index.js",
  "jsnext:main": "dist/esm/index.js",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "files": [
    "dist/",
    "src/components-triggers/"
  ],
  "scripts": {
    "clean": "node src/scripts/clean.js",
    "build:lib": "stencil build --prod --docs",
    "build": "pnpm clean && pnpm lint && pnpm build:lib && pnpm test",
    "start": "stencil build --watch --serve",
    "lint": "eslint",
    "lint:fix": "eslint --ext .js,.ts,.tsx,.vue --fix .",
    "test": "pnpm test:spec && stencil test --e2e --screenshot --ci",
    "test:spec": "jest --config=jest.stencil.config.js --passWithNoTests",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "generate": "stencil generate"
  },
  "dependencies": {
    "@floating-ui/dom": "0.5.3",
    "@maltjoy/tokens": "1.5.0",
    "@stencil/core": "2.15.1"
  },
  "devDependencies": {
    "@stencil/eslint-plugin": "0.4.0",
    "@stencil/sass": "1.4.1",
    "@types/jest": "26.0.21",
    "@types/puppeteer": "^5.4.5",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "eslint": "7.22.0",
    "eslint-plugin-jest": "24.3.2",
    "eslint-plugin-react": "7.22.0",
    "fs-extra": "^10.0.0",
    "jest": "27.5.1",
    "jest-cli": "27.5.1",
    "puppeteer": "10.0.0",
    "semantic-release": "^19.0.2",
    "tslib": "1.14.1",
    "typescript": "4.3.2"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:maltcommunity/apps/design-system.git"
  },
  "keywords": [
    "design-system",
    "stencil",
    "typescript"
  ],
  "author": "kevin@malt.com",
  "license": "MIT"
}
