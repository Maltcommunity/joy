{
  "name": "@maltjoy/core",
  "version": "0.6.1",
  "description": "Design system library by @malt",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "es2015": "dist/esm/index.js",
  "es2017": "dist/esm/index.js",
  "jsnext:main": "dist/esm/index.js",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "files": [
    "dist/"
  ],
  "scripts": {
    "clean": "node scripts/clean.js",
    "build:stencil": "stencil build --docs",
    "build:ts": "tsc --project ./src/components-triggers/tsconfig.json",
    "build": "pnpm clean && pnpm build:stencil && pnpm build:ts",
    "start": "stencil build --dev --watch --serve",
    "lint": "eslint",
    "lint:fix": "eslint --ext .js,.ts,.tsx,.vue --fix .",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "generate": "stencil generate"
  },
  "dependencies": {
    "@maltjoy/tokens": "0.4.0",
    "@stencil/core": "2.12.1"
  },
  "devDependencies": {
    "@stencil/eslint-plugin": "0.4.0",
    "@stencil/sass": "1.4.1",
    "@types/jest": "26.0.21",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "eslint": "7.22.0",
    "eslint-plugin-jest": "24.3.2",
    "eslint-plugin-react": "7.22.0",
    "fs-extra": "^10.0.0",
    "jest": "26.6.3",
    "jest-cli": "26.6.3",
    "puppeteer": "^13.1.3",
    "semantic-release": "^19.0.2",
    "tslib": "1.14.1",
